<h1>Cart</h1>
<hr>
<div class="item-list">
  <% current_cart.cart_items.each do |item|%>
    <%= render partial: "shared/item", locals:{item: item}%>
  <%end%>
</div>
<hr>
<div class="subtotal">
  <p>Subtotal</p>
  <p class="amount"><%= current_cart.subtotal%></p>
</div>
<div class="view-cart">
  <%= link_to "View Cart", cart_path, class:"btn btn-info"%>
</div>

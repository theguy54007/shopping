<% @products.each do|product|%>
      <div class="product-box">
        <%= link_to product_path(product) do%>
          <div class="product-box-img">
            <% for id in 0..9 %>
              <% if image_path(product.image).include?('/'+id.to_s+'.jpg') %>
                <%= image_tag('/seed_img/'+id.to_s+'.jpg', class: "img-responsive center-block") %>
              <% end %>
            <%end%>
          </div>
          <h3><%=product.name%></h3>
        <%end%>
        <p><%= truncate(product.description, length: 30)%></p>
        <h4>$<%=product.price%></h4>
        <%=button_to "Add to Cart", add_to_cart_product_path(product),remote: true, class:"btn btn-success btn-add"%>
      </div>
    <%end%>
      <br>
    <div class="container">
      <div class="row">
        <%= paginate @products%>
      </div>
    </div>
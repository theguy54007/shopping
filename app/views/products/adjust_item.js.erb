<% item = current_cart.find_item_by(@product)%>

<%if !item%>
  $('.product-<%= @product.id%>').remove();
<%else%>
  $('.cart-<%= item.product.id%>-qty').text('<%= item.quantity%>');
  $('.item-<%= item.product.id%>-total').text('$<%= item.item_total%>');
<%end%>

$('.amount').text('<%= current_cart.subtotal%>');
<% if current_cart.cart_items.empty?%>
$('.cart-page').html(' ');
$('.cart-page').css('width', '0%');
$('.product-page').css('width', '100%');
$('.product-page').css('border-right', 'none');
$('.product-show').css('width', '100%');
<%end%>

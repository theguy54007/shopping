<% item = current_cart.find_item_by(@product)%>
<% if item %>
  $('.item-list').append('<%= j render partial: "shared/item", locals: { item: item}%>');
  $('.cart-page').html('<%= j render partial: "shared/cart" %>');
  $('.cart-page').css('width', '21%');
  $('.product-page').css('width', '72%');
  $('.product-page').css('border-right', '1px solid');
  $('.product-show').css('width', '72%');
<%else%>
  <%if item.quantity == 1 %>
    $('.item-list').append('<%= j render partial: "shared/item", locals: { item: item}%>');
  <%else%>
    $('.cart-<%= item.product.id%>-qty').text('<%= item.quantity%>');
  <%end%>
<%end%>


$('.amount').text('<%= current_cart.subtotal%>')

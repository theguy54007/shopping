<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><%= link_to "Product", admin_products_path%></a></li>
    <li role="presentation"><%= link_to "Order", admin_orders_path%></li>
    <li role="presentation"><%= link_to "Category", admin_categories_path%></li>
  </ul>
  <br>

  <div class="row">
    <%= link_to "Create new product", new_admin_product_path%>
    <br>
    <table class="table table-striped table-bordered table-admin">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Category</th>
          <th>Image</th>
          <th>Price</th>
          <th colspan="2">Option</th>
        </tr>
      </thead>
      <% @products.each do |product|%>
      <tbody>
      <tr>
        <td><%= product.id%></td>
        <td><%= product.name%></td>
        <td><%= product.category.name %></td>
        <td>
          <%if product.image? %>
            <%= image_tag product.image, width:50, height:30, class: "img-responsive " %>
          <% else %>
            <%= image_tag "http://fakeimg.pl/50x30/FFFFBB/", width:50, height:30, class: "img-responsive " %>
          <% end %>
        </td>
        <td><%= product.price%></td>
        <td>
          <%= link_to "Edit", edit_admin_product_path(product)%>
        </td>
        <td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, admin_product_path(product), method: :delete, data:{confirm:"Are you sure?"}%></td>
      </tr>
    </tbody>
      <%end%>

    </table>
    <div class="text-center">
    <%= paginate @products%>
    </div>
  </div>
</div>

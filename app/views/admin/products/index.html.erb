<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><%= link_to "Product", admin_products_path%></a></li>
    <li role="presentation"><%= link_to "Order", admin_orders_path%></li>
  </ul>
  <br>

  <div class="row">
    <%= link_to "Create new product", new_admin_product_path%>
    <br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Price</th>
          <th>Option</th>
        </tr>
      </thead>
      <% @products.each do |product|%>
      <tbody>
      <tr>
        <td><%= product.id%></td>
        <td><%= product.name%></td>
        <td><%= product.price%></td>
        <td>
          <%= link_to "Show", admin_product_path(product)%>
          <%= link_to "Edit", edit_admin_product_path(product)%>
          <%= link_to "Delete", admin_product_path(product), method: :delete, data:{confirm:"Are you sure?"}%>
        </td>
      </tr>
    </tbody>
      <%end%>

    </table>
    <div class="text-center">
    <%= paginate @products%>
    </div>
  </div>
</div>

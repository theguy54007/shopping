<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation" ><%= link_to "Product", admin_products_path%></a></li>
    <li role="presentation" ><%= link_to "Order", admin_orders_path%></li>
    <li role="presentation" class="active"><%= link_to "Category", admin_categories_path%></li>
  </ul>
  <br>
  <div>
    <%= form_for [:admin, @category] do |f| %>
      <div>
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      </div><br>

      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    <hr>
    <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
    <% end %>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Option</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><%= link_to 'Edit', admin_categories_path(id: category.id) ,class: "btn btn-success" %>
                <%= link_to 'Delete', admin_category_path(category), class: "btn btn-danger",method: :delete, data: { confirm: "Are you sure?"}%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation" ><%= link_to "Product", admin_products_path%></a></li>
    <li role="presentation" class="active"><%= link_to "Order", admin_orders_path%></li>
  </ul>
  <br>
  <div class="row">
      <table class="table table-striped table-bordered table-admin">
        <thead>
          <tr>
            <th>Order Number</th>
            <th>Price</th>
            <th>Payment Status</th>
            <th>Shipping Status</th>
            <th>Order Details</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
          <tr>
            <td>#<%= order.sn%></td>
            <td>$<%= order.amount%></td>
            <td><%= order.payment_status%></td>
            <td><%= order.shipping_status%></td>
            <td><%= link_to "Edit Details", edit_admin_order_path(order)%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
  </div>
</div>
